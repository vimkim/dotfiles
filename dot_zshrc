    # arch linux
    export PATH="/usr/lib/ccache/bin:$PATH"
elif command -v ccache >/dev/null 2>&1 && [ -d "/usr/lib/ccache" ]; then
    # ubuntu
    export PATH="/usr/lib/ccache:$PATH"
fi


