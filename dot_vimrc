" Create new file with path under cursor
nnoremap <silent> <leader>fn :e <C-R><C-F><CR>

" Colemak keybindings
noremap n gj
noremap N J
noremap e gk
noremap E K
noremap i l
noremap I L

noremap l i
noremap L I
noremap k n
noremap K N
noremap j e
noremap J E

noremap gn n
noremap ge e

inoremap ,s <ESC>
noremap ,s <ESC>:w<CR>
noremap s, <ESC>:w<CR>
noremap ,q <ESC>:bd<CR>
noremap <C-q> <ESC>:confirm qa<CR>

nnoremap ; :

set encoding=utf-8
set termguicolors

set clipboard=unnamedplus

set confirm
